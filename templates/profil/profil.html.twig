{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}
{% block body %}
    <h1>Profil</h1>
    <br>
    <h2>Informations personnelles : </h2>
    <br>
    <h3>Email : {{ app.user.email}}</h3>
    <h3>Prénom : {{ app.user.firstName }}</h3>
    <h3>Nom : {{ app.user.name}}</h3>
    <br>
    <h2>Commandes passées :</h2>
    <ul>
        {% for order in orders %}
            <li><p>{{ order.state.stateDef }}</p>
                <br>
                {% for orderProduct in products %}
                    {% if order.id == orderProduct.order %}
                <p> {{ orderProduct.quantity }} {{orderProduct.product.name}} - {{ orderProduct.product.price }} euros</p></li>
                    {% endif %}
                {% endfor %}
        {% endfor %}
    </ul>

{% endblock %}
