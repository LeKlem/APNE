{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('news') }}
{% endblock %}

{% block body %}
    <section class="=pt-7 pt-md-10">
        <div class="container">
            <div class = "row">
                <div class="col-12">
                    <h2 class="mb-">
                        Derni√®res nouvelles
                    </h2>
                </div>
                {% for post in post %}
                    <div class="box">
                        <div class="card mb-6 shadow-light-lg lift lift-lg">
                            <a class="card-body">
                                <table>
                                    <thead>

                                        <th class="text-center" colspan="2">
                                                <h3>{{ post.title }}</h3>
                                        </th>
                                    </thead>
                                    <tbody>
                                        <td><img src="images/post/{{post.image}}"></img></td>

                                        <td class="td-text"><p style="justify-content: center">{{ post.content |u.truncate(1000, '...', false) }}</p>
                                            <a href="/news/{{ post.slug  }}"> <p> Pour la suite...</p></a> </td>
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td colspan="2">
                                            <h3> &nbsp;  </h3>
                                        </td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            {% do post.setPageRange(4) %}
            {{ knp_pagination_render(post, 'base/pagination.html.twig') }}
        </div>
    </section>
{% endblock %}
