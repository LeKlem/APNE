    <h2 class="text-center">News</h2>
    <div class="NewsSlider container-sm">
        {% for new in news %}
            <div class="col-sm-4 ">
                <div class="card" style="width: 60%">
                    <div class="h-100 d-flex justify-content-center align-items-center">
                        <img src="images/post/{{ new.image  }}" class="card-img-top" style="width: 75%; margin-top: 2%">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ new.title }}</h5>
                        <p class="card-text">{{ new.content|length > 50 ?  new.content|slice(0, 50) ~ '...' :  new.content }}
                        </p>
                        <a href="/news/{{ new.slug }}" class="btn btn-primary">Acheter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
